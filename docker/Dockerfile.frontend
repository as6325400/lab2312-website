FROM node:22-slim AS build

WORKDIR /app

ARG VITE_VPN_URL
ENV VITE_VPN_URL=${VITE_VPN_URL}
ARG VITE_OUTLINE_URL
ENV VITE_OUTLINE_URL=${VITE_OUTLINE_URL}

COPY frontend/package*.json ./
RUN npm ci

COPY frontend/ ./
RUN npm run build

FROM caddy:alpine
COPY --from=build /app/dist /srv
COPY docker/Caddyfile /defaults/Caddyfile
COPY docker/caddy-entrypoint.sh /entrypoint.sh

EXPOSE 80 443

ENTRYPOINT ["/entrypoint.sh"]
