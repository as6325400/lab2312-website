# Server
PORT=3001
SESSION_SECRET=change-me-to-a-random-string

# LDAP / FreeIPA
LDAP_URL=ldaps://ipa.example.com:636
IPA_HOST=ipa.example.com
LDAP_BASE_DN=cn=users,cn=accounts,dc=example,dc=com
LDAP_BIND_DN=cn=Directory Manager
LDAP_BIND_PASSWORD=change-me

# SSO
SSO_SECRET=change-me-to-a-random-string

# PAM
PAM_SERVICE=login

# Bastion (SSH Terminal) — SSH username 會用登入者的帳號
BASTION_HOST=127.0.0.1
BASTION_PORT=22
BASTION_PRIVATE_KEY_PATH=/etc/lab-portal/bastion_key

# Uploads
UPLOAD_DIR=./uploads
UPLOAD_MAX_SIZE=10485760

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Site URL (for email content)
SITE_URL=http://localhost:5173

# SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=change-me
SMTP_FROM=noreply@example.com
